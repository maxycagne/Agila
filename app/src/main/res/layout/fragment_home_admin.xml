<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Admin.Fragments.HomeAdmin">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/secondary"
                android:layout_marginHorizontal="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/btn_manage_accounts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginEnd="5dp"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/material_symbols__person_apron_rounded"
                                app:tint="@color/primary">
                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/manrope_medium"
                                android:gravity="center"
                                android:text="manage accounts"
                                android:textColor="@color/primary"
                                android:textSize="12sp">
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_create_accounts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginEnd="5dp"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/material_symbols__person_add_rounded"
                                app:tint="@color/primary">
                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/manrope_medium"
                                android:gravity="center"
                                android:text="create account"
                                android:textColor="@color/primary"
                                android:textSize="12sp">
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_view_projects"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/material_symbols__shelf_position"
                                app:tint="@color/primary">
                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/manrope_medium"
                                android:gravity="center"
                                android:text="view projects"
                                android:textColor="@color/primary"
                                android:textSize="12sp">
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/secondary"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/btn_account_requests"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginEnd="5dp"
                            android:gravity="center">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/material_symbols__person_raised_hand_rounded"
                                    app:tint="@color/primary">
                                </ImageView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/layout_account_request_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/red"
                                    app:cardCornerRadius="20dp"
                                    android:layout_gravity="end|top"
                                    app:cardElevation="0dp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginBottom="20dp">
                                    <TextView
                                        android:id="@+id/txt_account_request_total"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:fontFamily="@font/manrope_medium"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:text="2"
                                        android:textColor="@color/white"
                                        android:textSize="9sp">
                                    </TextView>
                                </androidx.cardview.widget.CardView>
                            </FrameLayout>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/manrope_medium"
                                android:gravity="center"
                                android:text="account requests"
                                android:textColor="@color/primary"
                                android:textSize="12sp">
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_project_requests"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginEnd="5dp"
                            android:gravity="center">


                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/material_symbols__cases_rounded"
                                    app:tint="@color/primary">
                                </ImageView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/layout_project_request_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/red"
                                    app:cardCornerRadius="20dp"
                                    android:layout_gravity="end|top"
                                    app:cardElevation="0dp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginBottom="20dp">
                                    <TextView
                                        android:id="@+id/txt_project_request_total"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:fontFamily="@font/manrope_medium"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:text="2"
                                        android:textColor="@color/white"
                                        android:textSize="9sp">
                                    </TextView>
                                </androidx.cardview.widget.CardView>
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/manrope_medium"
                                android:gravity="center"
                                android:text="project requests"
                                android:textColor="@color/primary"
                                android:textSize="12sp">
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_report"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:gravity="center">
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/material_symbols__error"
                                    app:tint="@color/primary">
                                </ImageView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/layout_report_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/red"
                                    app:cardCornerRadius="20dp"
                                    android:layout_gravity="end|top"
                                    app:cardElevation="0dp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginBottom="20dp">
                                    <TextView
                                        android:id="@+id/txt_reports_total"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:fontFamily="@font/manrope_medium"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:text="2"
                                        android:textColor="@color/white"
                                        android:textSize="9sp">
                                    </TextView>
                                </androidx.cardview.widget.CardView>
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/manrope_medium"
                                android:gravity="center"
                                android:text="reports"
                                android:textColor="@color/primary"
                                android:textSize="12sp">
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_medium"
                android:text="Projects"
                android:textColor="@color/black"
                android:layout_marginHorizontal="20dp"
                android:textSize="14sp"
                android:layout_marginTop="20dp">
            </TextView>

            <LinearLayout
                android:id="@+id/btn_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="20dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/material_symbols__filter_alt">
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_medium"
                    android:text="filters"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="12sp">
                </TextView>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_arrow_drop_down_24">
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginHorizontal="20dp">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:hint="location"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp">
                    <AutoCompleteTextView
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        android:id="@+id/edit_location"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:editable="false"
                        android:inputType="none"
                        android:drawableEnd="@drawable/baseline_arrow_drop_down_24"
                        android:singleLine="true">
                    </AutoCompleteTextView>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="status"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp">
                    <AutoCompleteTextView
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        android:id="@+id/edit_status"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:editable="false"
                        android:inputType="none"
                        android:drawableEnd="@drawable/baseline_arrow_drop_down_24"
                        android:singleLine="true">
                    </AutoCompleteTextView>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/card_show_my_project"
                android:layout_weight="1">
            </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>
    </ScrollView>



</LinearLayout>